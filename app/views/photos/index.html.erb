<div>
<div>
<a href="/users"> All users </a> </div>

<div><a href="/photos"> All public photos </a> </div>

<% if current_user.present? %>
  <li><div><a href="/users/edit">Edit profile</a> </div> </li>

  <li><div><a href="/users/sign_out">Sign out</a> </div> </li>
<% else %>
  <li><div><a href="/users/sign_up">Sign up</a> </div> </li>
  
  <li><div><a href="/users/sign_in">Sign in</a> </div> </li>
<% end %>

  <div>
    <h1>
      List of all photos
    </h1>
  </div>
</div>



<div>
  <div>

<% if current_user.present? %>
    <form action="/insert_photo" method="post" class="form-horizontal" enctype="multipart/form-data">
      
        <label for="browser_input_image">
          Image
        </label>

        <input type="file" id="browser_input_image" name="query_image" placeholder="Enter URL for the image..." class="form-control">
      

      
        <label for="caption">
          Caption
      </label>

        <input type="text" id="caption" name="query_caption" rows="2" placeholder="Enter a caption for the photo">
      

     
      <button>
        Add photo
      </button>
    </form>

  <%end%>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          Image
        </th>

        <th>
          Caption
        </th>

        <th>
          Owner
        </th>

        <th>
          Posted
        </th>

        <th>
          Likes
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_photos.each do |a_photo| %>
      <tr>
        <td>
          <img src="<%= a_photo.image %>">
        </td>

        <td>
          <%= a_photo.caption %>
        </td>

        <td>
          <%= a_photo.owner.username %>
        </td>

        <td>
          <%= time_ago_in_words(a_photo.created_at) %> ago
        </td>

        <td>
          <%= a_photo.likes_count %>
        </td>


      
        <td>
          <a href="/photos/<%= a_photo.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
